{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": ["es2016", "dom"],
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [".git", "node_modules"]
}
