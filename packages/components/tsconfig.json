{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "preserve",
    "noEmit": false,
    "outDir": "dist",
    "rootDirs": ["src", "stories"],
    "baseUrl": "src",
    "typeRoots": [
      "../../@types",
      "../../node_modules/@types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "scripts"]
}
